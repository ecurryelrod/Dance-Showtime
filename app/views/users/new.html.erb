<h1>Create a new account</h1>

<%= form_for @user, url: '/signup' do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    <br>
    <div>
        <%= f.label :email %>
        <%= f.email_field :email %>
    </div>
    <br>
    <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>
    <br>
    <div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
    </div>
    <br>
    <div><%= f.submit "Signup" %></div>
<% end %>