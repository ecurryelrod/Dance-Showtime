<div class="container">
    <h2>Create a new account</h2>
    <br>
    <%= form_for @user, url: '/signup' do |f| %>

        <%= render "errors/error", object: @user %>

        <div>
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>
        <br>
        <div>
            <%= f.label :email %>
            <%= f.email_field :email %>
        </div>
        <br>
        <div>
            <%= f.label :password %>
            <%= f.password_field :password %>
        </div>
        <br>
        <div>
            <%= f.label :password_confirmation, "Confirm Password" %>
            <%= f.password_field :password_confirmation %>
        </div>
        <br>
        <div><%= f.submit "Signup" %></div>
    <% end %>
</div>